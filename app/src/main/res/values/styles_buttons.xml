<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button Styles -->
    <style name="main_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">25sp</item>
        <item name="android:paddingBottom">25sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="bottom_center_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingTop">25sp</item>
        <item name="android:paddingBottom">25sp</item>
    </style>

</resources>